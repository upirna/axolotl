    	<ul class="list">
            {{#if account.canModifyPublicSettings}}
            <li><a href="#general">Edit your account settings &amp; manage users</a></li>
            {{/if}}
    		<li><a href="http://support.celtra.com/getting-started" target="_blank">Learn how to get started</a></li>
		</ul>
    </div>
</div>
{{else}}
    <div id="campaigns-table" class="table-container"></div>
{{/if}}